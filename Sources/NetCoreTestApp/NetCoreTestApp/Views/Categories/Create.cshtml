@model NetCoreTestApp.Models.Categories

@{
    ViewData["Title"] = "Create";
}

<div>
    @await Component.InvokeAsync("DynamicNavigation", new { entityName = "Categories", formName = "New" })
</div>

<h4>Categories</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label"></label>
                <input asp-for="CategoryName" class="form-control" data-val="true" data-val-required="The Category Name field is required." />
                <span data-valmsg-for="CategoryName" data-valmsg-replace="true" class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" data-val="true" data-val-length-min="1" data-val-length-max="50" data-val-length="Description need to be between 1 and 50 symbols."/>
                <span data-valmsg-for="Description" class="text-danger field-validation-valid" data-valmsg-replace="true"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-default" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
