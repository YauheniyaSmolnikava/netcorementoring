@model IEnumerable<NetCoreTestApp.Models.Categories>
@using NetCoreTestApp.HtmlHelpers


@{
    ViewData["Title"] = "Index";
}

<div>

    @await Component.InvokeAsync("DynamicNavigation", new { entityName = "Categories" })

</div>
<p>
    <a class="btn btn-default" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <img src="@Url.Action("GetImage", new { id = item.CategoryId })" width="80" height="80" />
                    @*@Html.NorthwindImageLink(item.CategoryId, "view")*@
                    <a northwind-id="2">view</a>
                    <a href="@Url.Action("Upload", new { id = item.CategoryId })">upload</a>
                </td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-default" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                        <a class="btn btn-default" asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Footer {
    Categories can not be edited
}
