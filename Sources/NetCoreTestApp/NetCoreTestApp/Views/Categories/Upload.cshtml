@model NetCoreTestApp.DataAccess.Models.ImageUpload
@{
    ViewData["Title"] = "Edit";
}

<h2>Categories</h2>

<div>
    @await Component.InvokeAsync("DynamicNavigation", new { entityName = "Categories", formName = "Upload" })
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="Categories" asp-action="Upload">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="File" />
                </div>
            </div>
            <input asp-for="CategoryId" type="hidden"/>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-default" asp-action="Index" asp-controller="Categories">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
